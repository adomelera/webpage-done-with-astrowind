---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  /* --aw-color-text-muted: rgba(251, 246, 241, 0.875); */
  :root {
    --aw-font-sans: 'Fira Sans';
    --aw-font-serif: 'Fira Sans';
    --aw-font-heading: 'Nunito';

    --aw-color-primary: #ce8157;
    --aw-color-secondary: #6C6965;
    --aw-color-accent: #000000;

    --aw-color-text-heading: 'InterVariable';
    --aw-color-text-default: rgba(108, 105, 101, 0.75);
    --aw-color-text-muted: rgba(108, 105, 101, 0.75);
    --aw-color-bg-page: #FBF6F1;

    --aw-color-bg-page-dark: #6C6965;

    ::selection {
      background-color: rgb(231 229 228);
    }
  }

  .dark {
    --aw-font-sans: 'Fira Sans';
    --aw-font-serif: 'Fira Sans';
    --aw-font-heading: 'Nunito';

    --aw-color-primary: rgb(251, 246, 241);
    --aw-color-secondary: rgb(251, 246, 241);
    --aw-color-accent: #000000;

    --aw-color-text-heading: rgb(251, 246, 241);
    --aw-color-text-default: rgb(251, 246, 241);
    --aw-color-text-muted: rgba(251, 246, 241, 0.875);
    
    --aw-color-bg-page: #6C6965;
    /* --aw-color-bg-page: #ce8157; */

    ::selection {
      background-color: rgb(231 229 228);
      color: #6C6965;
    }
  }
</style>
